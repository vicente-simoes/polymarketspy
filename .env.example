# ==============================================
# Polymarket Copybot - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ==============================================
# Core Settings
# ==============================================

# Your domain (for production)
DOMAIN=yourdomain.com

# Admin email - the only email allowed to sign in (must match your GitHub email)
ADMIN_EMAIL=your-email@example.com

# ==============================================
# Database
# ==============================================

# For local development (docker-compose.dev.yml)
DATABASE_URL=postgresql://copybot:devpassword@localhost:5432/copybot?schema=public

# For production (docker-compose.yml) - use strong random password
# DATABASE_URL=postgresql://copybot:YOUR_STRONG_PASSWORD@db:5432/copybot?schema=public
POSTGRES_PASSWORD=devpassword

# ==============================================
# Redis
# ==============================================

# For local development (no password needed with docker-compose.dev.yml)
REDIS_URL=redis://localhost:6379

# For production - use strong random password
# REDIS_URL=redis://:YOUR_STRONG_PASSWORD@redis:6379
REDIS_PASSWORD=devredispassword

# ==============================================
# NextAuth (Authentication)
# ==============================================

# URL where your app is running
# Local: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL=http://localhost:3000

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars

# GitHub OAuth App credentials
# Create at: https://github.com/settings/developers
# Set callback URL to: {NEXTAUTH_URL}/api/auth/callback/github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==============================================
# External APIs
# ==============================================

# Alchemy WebSocket URL for on-chain event detection
# Get from: https://dashboard.alchemy.com/
ALCHEMY_WS_URL=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Polymarket API endpoints (these are the public defaults)
POLYMARKET_DATA_API_BASE_URL=https://data-api.polymarket.com
POLYMARKET_CLOB_BASE_URL=https://clob.polymarket.com

# ==============================================
# Worker Settings (optional)
# ==============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Worker health URL (for web to check worker status)
# Local dev: http://localhost:8081/health
# Production: http://worker:8081/health (Docker internal)
# WORKER_HEALTH_URL=http://localhost:8081/health
